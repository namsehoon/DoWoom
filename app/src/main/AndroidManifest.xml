<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dowoom">
    <!-- 인터넷 권한 -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 사진 앨범 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

<!--  android:requestLegacyExternalStorage="true" : application에 저장소 접근 허용 추가-->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DoWoom"
        android:requestLegacyExternalStorage="true"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activity.comu.GuestWriteActivity"
            android:exported="false" />
        <activity
            android:name=".activity.game.PlayGameActivity"
            android:exported="false" />
        <activity
            android:name=".activity.game.CreateGameActivity"
            android:exported="false" />
        <activity
            android:name=".activity.chat.ChatActivity"
            android:exported="false" />
        <activity
            android:name=".activity.login.LoadingActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.register.CheckActivity"
            android:exported="false" />
        <activity
            android:name=".activity.login.FindByEmailActivity"
            android:exported="false" />
        <activity
            android:name=".activity.register.RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".activity.login.StartActivity"
            android:exported="true" />
        <activity
            android:name=".activity.login.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".activity.main.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <variable
            name="vm"
            type="com.example.dowoom.viewmodel.mainViewmodel.ComuViewModel" />

        <variable
            name="comuModel"
            type="com.example.dowoom.model.comunityModel.ComuModel" />
    </data>

    <RelativeLayout
        android:id="@+id/rll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tvHumor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="유머게시판" />

                <TextView
                    android:id="@+id/tvGuest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="익명게시판" />

                <TextView
                    android:id="@+id/tvPolice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="신고 및 건의" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llToWrite"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:visibility="gone"
                android:orientation="horizontal"
                android:gravity="end">

                <TextView
                    android:id="@+id/tvToWrite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16sp"
                    android:textSize="16sp"
                    android:text="글쓰기"/>

            </LinearLayout>

        </LinearLayout>






        <!--  시작 -->

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_below="@id/buttons"
            android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llconTents"
            android:visibility="gone"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvKindOf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="TextView" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="8dp"
                android:weightSum="4"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="3"
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@{comuModel.title}"
                    android:layout_gravity="start" />

                <TextView
                    android:id="@+id/tvCreator"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:text="@{comuModel.creator}"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llImages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="16dp"
                android:orientation="vertical"/>

            <TextView
                android:id="@+id/tvSubject"
                android:visibility="gone"
                android:padding="8sp"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginVertical="20dp"/>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="댓글목록"
                android:layout_marginStart="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvComment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="8dp"
                tools:listitem="@layout/comu_items" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="댓글쓰기"
                android:layout_marginStart="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/llName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_marginStart="8dp"
                    android:gravity="start">

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="8dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="내용 : " />
                    <EditText
                        android:id="@+id/etComment"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginStart="42dp"
                        android:ems="10"
                        android:inputType="text"
                        android:hint="댓글을 입력 해주세요."
                        android:layout_marginEnd="8dp" />
                </LinearLayout>


                <Button
                    android:id="@+id/commentInsertBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center"
                    android:text="댓글 등록" />
            </LinearLayout>


               <LinearLayout

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginBottom="50dp"
                   android:weightSum="3">

                   <TextView
                       android:id="@+id/tvBack"
                       android:layout_weight="1"
                       android:layout_marginHorizontal="36dp"
                       android:gravity="center"
                       android:layout_width="wrap_content"
                       android:background="@color/black"
                       android:textColor="@color/white"
                       android:layout_height="30dp"
                       android:onClick="@{()->vm.beforeBtnClicked()}"
                       android:layout_marginTop="16dp"
                       android:text="이전"/>

                   <TextView
                       android:id="@+id/tvBackToRv"
                       android:layout_weight="1"
                       android:layout_marginHorizontal="36dp"
                       android:gravity="center"
                       android:textColor="@color/white"
                       android:background="@color/black"
                       android:layout_width="wrap_content"
                       android:layout_marginTop="16dp"
                       android:layout_height="30dp"
                       android:text="목록으로"/>

                   <TextView
                       android:id="@+id/tvNext"
                       android:layout_weight="1"
                       android:layout_marginHorizontal="36dp"
                       android:gravity="center"
                       android:background="@color/black"
                       android:textColor="@color/white"
                       android:layout_width="wrap_content"
                       android:onClick="@{()->vm.nextBtnClicked()}"
                       android:layout_height="30dp"
                       android:layout_marginTop="16dp"
                       android:text="다음"/>


               </LinearLayout>



        </LinearLayout>

        </ScrollView>
        <!-- 끝 -->



        <LinearLayout
            android:id="@+id/llComuList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttons"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants">

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/refresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMainComuList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    tools:listitem="@layout/comu_items" />

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llHandlePage"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="16dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvBeforePage"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginEnd="4dp"
                android:background="@color/black"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:onClick="@{() -> vm.beforePageBtnClicked()}"
                android:gravity="center"
                android:text="이전 페이지" />


            <TextView
                android:id="@+id/tvNextPage"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:background="@color/black"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:onClick="@{() -> vm.nextPageBtnClicked()}"
                android:gravity="center"
                android:text="다음 페이지" />
        </LinearLayout>

    </RelativeLayout>

</layout>
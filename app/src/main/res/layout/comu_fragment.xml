<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <variable
            name="vm"
            type="com.example.dowoom.viewmodel.mainViewmodel.ComuViewModel" />

        <variable
            name="comuModel"
            type="com.example.dowoom.model.comunityModel.ComuModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/tvBest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="베스트"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tvHumor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="유머게시판"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tvGuest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="익명게시판"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llToWrite"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:id="@+id/tvToWrite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16sp"
                android:textSize="16sp"
                android:text="글쓰기"/>

        </LinearLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/childFragment"
            android:layout_width="match_parent"
            android:layout_height="300sp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/tabLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbarMain">
        </androidx.fragment.app.FragmentContainerView>

       <LinearLayout
           android:id="@+id/llComuList"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
               android:id="@+id/refresh"
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/rvComuList"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginVertical="8dp"
                   tools:listitem="@layout/comu_items" />

           </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
       </LinearLayout>


</LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.example.dowoom.viewmodel.mainViewmodel.ComuViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".fragments.childFragments.ComuHumor">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
              <TextView
                  android:id="@+id/tvKindOf"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="8dp"
                  android:layout_marginTop="8dp"
                  android:text="TextView" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="8dp"
                android:weightSum="4"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="3"
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="TextView"
                    android:layout_gravity="start" />

                <TextView
                    android:id="@+id/tvCreator"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:text="TextView"/>

            </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

                  <ImageView
                      android:id="@+id/ivContent"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_marginHorizontal="8dp"
                      android:layout_marginTop="24dp"
                      android:visibility="gone"
                      android:layout_gravity="center"
                      tools:srcCompat="@tools:sample/avatars" />

                  <TextView
                      android:id="@+id/tvContent"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="24dp"
                      android:text="콘텐츠 내용"
                      android:layout_marginHorizontal="8dp"/>
              </LinearLayout>

              <TextView
                  android:id="@+id/textView14"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="24dp"
                  android:text="댓글목록"
                  android:layout_marginStart="8dp" />

              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/rvComment"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_marginHorizontal="8dp"
                  android:layout_marginTop="8dp" />

              <TextView
                  android:id="@+id/textView15"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="30dp"
                  android:text="댓글쓰기"
                  android:layout_marginStart="8dp" />

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">


                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginStart="8dp"
                      android:gravity="start">
                      <TextView
                          android:id="@+id/ss"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="이름 : " />

                      <EditText
                          android:id="@+id/editTextTextPersonName"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:hint="이름을 입력해주세요."
                          android:layout_marginEnd="8dp"
                          android:layout_marginStart="42dp"
                          android:ems="10"
                          android:inputType="textPersonName" />

                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginStart="8dp"
                      android:gravity="center">
                      <TextView
                          android:id="@+id/textView22"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="비밀번호 : "
                          />

                      <EditText
                          android:id="@+id/editTextTextPersonName2"
                          android:layout_marginEnd="8dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="16dp"
                          android:ems="10"
                          android:inputType="numberPassword"
                          android:gravity="start"
                          android:layout_gravity="end"
                          android:text="1234"
                          />
                  </LinearLayout>


                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginStart="8dp"
                      android:gravity="center">

                      <TextView
                          android:id="@+id/textView23"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"

                          android:text="내용 : " />
                      <EditText
                          android:id="@+id/editTextTextPersonName3"
                          android:layout_width="match_parent"
                          android:layout_height="100dp"
                          android:layout_marginStart="42dp"
                          android:ems="10"
                          android:inputType="text"
                          android:hint="댓글을 입력 해주세요."
                          android:layout_marginEnd="8dp" />
                  </LinearLayout>


                  <Button
                      android:id="@+id/inputBtn"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="16dp"
                      android:layout_gravity="center"
                      android:text="Button"
                       />
              </LinearLayout>

              <TextView
                  android:id="@+id/tvAnother"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="16dp"
                  android:text="유머게시판"/>

              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/rvComuList"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_marginHorizontal="8dp"
                  android:clipToPadding="false"
                  android:layout_marginTop="8dp" />

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginBottom="16dp"
                  android:weightSum="2">

                  <TextView
                      android:id="@+id/tvBack"
                      android:layout_weight="1"
                      android:layout_marginHorizontal="36dp"
                      android:gravity="center"
                      android:layout_width="wrap_content"
                      android:layout_height="30dp"
                      android:layout_marginTop="16dp"
                      android:text="이전"/>

                  <TextView
                      android:id="@+id/tvNext"
                      android:layout_weight="1"
                      android:layout_marginHorizontal="36dp"
                      android:gravity="center"
                      android:layout_width="wrap_content"
                      android:layout_height="30dp"
                      android:layout_marginTop="16dp"
                      android:text="다음"/>

              </LinearLayout>
          </LinearLayout>




        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</layout>

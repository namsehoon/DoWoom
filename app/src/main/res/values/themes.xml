<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DoWoom" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/custom_light_blue_2</item>

        <item name="colorPrimaryVariant">#6B2BFB</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="logoyellow">@color/custom_light_blue_2</item>

        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:editTextStyle">@style/customTextViewFontStyle</item>
        <item name="android:buttonStyle">@style/customTextViewFontStyle</item>
    </style>

    <style name="CustomAlertDialog">
        <!-- 꽉 채운 화면에 배경 없이 (custom view 영역만 보일 것이다.) -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>

        <!-- Dim 처리 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:colorBackground">?attr/colorBackgroundFloating</item>
        <item name="android:windowCloseOnTouchOutside">true</item>

        <!-- Dialog 가 센터에 나오도록 하자. -->
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>